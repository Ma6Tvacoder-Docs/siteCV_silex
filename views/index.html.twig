{% extends "layout_front.html.twig" %}

{% block title %}Home{% endblock %}

{% block content %}

<body class="index" id="page-top">
  <!-- Navigation -->

      <!-- Header -->
      <header class="masthead gradient">
        {% for perso in persos %}
          <div id="etoiles"></div>
          <div class="container ">
            <div class="profilImg">
              <img src="{{ perso.img }}" title="{{ perso.title }}" class="elegantshadow img-fluid" alt="{{ perso.title }}">

            </div>
            <div class="intro-text">
              <span class="name"><i class="fa fa-rebel" aria-hidden="true"></i> {{ perso.prenom }} {{ perso.title }} <i class="fa fa-rebel" aria-hidden="true"></i></span>
              <hr class="star-light">
              <span class="skills">{{ perso.poste }}</span>
              <!-- <p class=""><em>{{ perso.adresse }}</em></p>
              <p class=""><em> {{ perso.tel }}</em></p> -->
              <ul class="list-inline socialBtn">
                <li><a href="{{ perso.facebook }}" target="_blank"><i class="fa fa-facebook" aria-hidden="true"></i></a></li>
                <li><a href="{{ perso.github }}" target="_blank"><i class="fa fa-github" aria-hidden="true"></i></a></li>
                <li><a href="{{ perso.codepen }}" target="_blank"><i class="fa fa-codepen" aria-hidden="true"></i></a></li>
              </ul>
            </div>
        {% endfor %}
      </header>

<div id="front" class="container">
  <h1 class="row col-md-12">Articles</h1>
    {% for article in articles %}
      <article class="row col-md-6 tuile">
          <h2><i class="fa fa-star" aria-hidden="true"></i> <a class="articleTitle" href="{{ path('article', { 'id': article.id }) }}">{{ article.title }}</a></h2>
          <p>{{ article.content }}</p>
      </article>
    {% endfor %}
  <h1 class="row col-md-12">Experiences</h1>
  {% for experience in experiences %}
    <article class="row col-md-6 tuile">
        <h2><a class="articleTitle" href="{{ path('experience', { 'id': experience.id }) }}">{{ experience.poste }}</a></h2>
        <p><em>{{ experience.debut }}</em> / <em>{{ experience.fin }}</em></p>
        <div class="col-md-12">
          <img src="{{ experience.img }}" title="{{ experience.title }}" class="col-md-8 col-md-offset-2 img-thumbnail" alt="{{ experience.title }}">
        </div>
        <h3>{{ experience.content }}</h3>
    </article>
  {% endfor %}
  <h1 class="row col-md-12">Loisirs</h1>
  {% for loisir in loisirs %}
    <article class="row col-md-6 tuile">
        <h2><a class="articleTitle" href="{{ path('loisir', { 'id': loisir.id }) }}">{{ loisir.title }}</a></h2>
        <p>{{ loisir.content }}</p>
    </article>
  {% endfor %}
  <h1 class="row col-md-12">Perso</h1>
  {% for perso in persos %}
    <article class="row col-md-6 tuile">
        <h2><a class="articleTitle" href="{{ path('perso', { 'id': perso.id }) }}">{{ perso.title }} {{ perso.prenom }}</a></h2>
        <div class="col-md-12">
          <img src="{{ perso.img }}" title="{{ perso.title }}" class="col-md-8 col-md-offset-2 img-thumbnail" alt="{{ perso.title }}">
        </div>
        <p>{{ perso.adresse }}</p>
        <p>{{ perso.tel }}</p>
    </article>
  {% endfor %}
  <h1 class="row col-md-12">Portfolio</h1>
  {% for portfolio in portfolios %}
    <article class="row col-md-6 tuile">
        <h2><a class="articleTitle" href="{{ path('portfolio', { 'id': portfolio.id }) }}">{{ portfolio.title }}</a></h2>
        <p>{{ portfolio.content }}</p>
    </article>
  {% endfor %}
</div>
</body>
{% endblock %}
